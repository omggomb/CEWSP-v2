<Window x:Class="CEWSP_v2.Dialogs.CreateNewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:CEWSP_v2.Properties"
        Title="CreateNewProject" Height="700" Width="700" MaxWidth="700" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="567*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="372*"/>
        </Grid.RowDefinitions>
        <Button Margin="10,10,0,0" HorizontalAlignment="Left" Width="118" Height="118" VerticalAlignment="Top">
            <Image x:Name="projectImage"  Source="Images/default-project-image.png"/>
        </Button>
        <TextBox Margin="133,105,0,0" Text="TextBox" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="179"/>
        <Label Content="{x:Static p:CreateNewProject.LblProjectName}" HorizontalAlignment="Left" Margin="133,74,0,0" VerticalAlignment="Top" Height="26" Width="82" />
        <Label Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="38"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="8,36,0,0" Grid.Row="1" Width="75" Height="23" VerticalAlignment="Top"/>
        <StackPanel x:Name="ceRootStackPanel" Height="23" Margin="12,36,0,0" Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal">
            <TextBox x:Name="ceRootTextBox"  Text="TextBox" Width="520"/>
            <Button Content="X" Width="29"/>

        </StackPanel>
        <StackPanel x:Name="ceGamefolderLabel" Height="23" Margin="12,97,0,0" Grid.Row="1" VerticalAlignment="Top" Orientation="Horizontal">
            <TextBox x:Name="ceGameFolderTextBox"  Text="TextBox" Width="520"/>
            <Button Content="X" Width="29"/>

        </StackPanel>
        <Label Content="Label" HorizontalAlignment="Left" Margin="12,66,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="38"/>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="10,97,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Height="23"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="12,147,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="38"/>
        <ComboBox Margin="12,173,0,0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="272" Height="22"/>
        <WebBrowser HorizontalAlignment="Left" Source="http://cryengine.com" Margin="12,235,0,51" Grid.Row="1" Width="540"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="12,204,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="38"/>


    </Grid>
</Window>
