<Window x:Class="CEWSP_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Ribbon Grid.ColumnSpan="2" >
           
        </Ribbon>
        <ScrollViewer x:Name="logScrollViewer" Margin="10,10,10,7" Grid.Row="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2">
            <TextBlock x:Name="logTextBlock" TextWrapping="Wrap"/>
        </ScrollViewer>
        <TabControl Margin="10,5,10,10" Grid.Row="1">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <ScrollViewer Grid.Column="1" Margin="10" Grid.Row="1">
            <Canvas Height="141" Width="216"/>
        </ScrollViewer>

    </Grid>
</Window>
